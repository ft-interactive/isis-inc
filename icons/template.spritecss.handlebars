.share-link {
	display: block;
	width: 40px;
	height: 40px;
	border-radius: 20px;
	position: relative;
	text-indent: -999em; 
	background-repeat: no-repeat;
}
.share-link:hover::before {
  content: "";
  background-color: rgba(0, 0, 0, .2);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  border-radius: 20px;
}
{{#sprites}}
.share-link-{{name}} {
  background-image: url(../images/{{{escaped_image}}});
  background-position: {{px.offset_x}} {{px.offset_y}};
}
{{/sprites}}